---
import Layout from "../layouts/Layout.astro";
---

<Layout title="dankuri">
    <main
        class="m-auto flex h-screen items-center justify-center p-4 text-xl text-white"
    >
        <h1 class="text-center text-7xl font-bold">
            Welcome to <span class="text-gradient">dankuri.dev</span>
        </h1>
    </main>
</Layout>

<style>
    .text-gradient {
        background-image: var(--accent-gradient);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-size: 400%;
        background-position: 0%;
    }
</style>
